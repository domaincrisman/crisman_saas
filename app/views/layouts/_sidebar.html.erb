<div class="sticky-top">
  <ul class="nav flex-column bg-dark shadow rounded"">
    <li class="<%= 'active font-weight-bold bg-light shadow rounded' if current_page?(tenant_path(current_tenant)) %> nav-item">
      <%= link_to tenant_path(current_tenant), class: 'nav-link' do %>
        <i class="fas fa-briefcase"></i>
        <%= current_tenant %>
        <span class="badge badge-primary">
          <%= current_tenant.plan %>
        </span>
      <% end %>
    </li>
    <li class="<%= 'active font-weight-bold bg-light shadow rounded' if current_page?(dashboard_path) %> nav-item">
      <%= link_to dashboard_path, class: 'nav-link' do %>
        <i class="fas fa-tachometer-alt"></i>
        Dashboard
      <% end %>
    </li>
    <li class="<%= 'active font-weight-bold bg-light shadow rounded' if current_page?(members_path) %> nav-item">
      <%= link_to members_path, class: 'nav-link' do %>
        <i class="fas fa-users"></i>
        Members
        <div class="badge badge-info">
          <%= Member.count %>
        </div>
      <% end %>
    </li>
    <li class="<%= 'active font-weight-bold bg-light shadow rounded' if current_page?(contacts_path) %> nav-item">
      <%= link_to contacts_path, class: 'nav-link' do %>
        <i class="far fa-address-book"></i>
        Contacts
        <div class="badge badge-info">
          <%= Contact.count %>
        </div>
      <% end %>
    </li>
  </ul>
</div>
<br> 